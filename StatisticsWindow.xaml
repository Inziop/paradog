<Window x:Class="ParadoxTranslator.StatisticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Translation Statistics - Paradox Translator" Height="540" Width="720"
        WindowStartupLocation="CenterOwner"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResize"
        MinHeight="400" MinWidth="600">
    
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="40" 
                      ResizeBorderThickness="5"
                      GlassFrameThickness="0"
                      CornerRadius="8"/>
    </WindowChrome.WindowChrome>
    
    <Window.Resources>
        <Style x:Key="WindowButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="46"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="WindowChrome.IsHitTestVisibleInChrome" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3E3E42"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="CloseButtonStyle" TargetType="Button" BasedOn="{StaticResource WindowButtonStyle}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E81123"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Border Background="#1E1E1E" CornerRadius="8" BorderBrush="#3E3E42" BorderThickness="1">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Custom Title Bar -->
        <Grid Grid.Row="0" Background="#2D2D30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0">
                <TextBlock Text="ðŸ“Š" FontSize="18" Margin="0,0,8,0"/>
                <TextBlock Text="Statistics" FontSize="14" FontWeight="SemiBold" 
                           Foreground="White" VerticalAlignment="Center"/>
            </StackPanel>
            
            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <Button Content="â”€" Style="{StaticResource WindowButtonStyle}" Click="OnMinimize"/>
                <Button Content="â–¡" x:Name="MaximizeButton" Style="{StaticResource WindowButtonStyle}" Click="OnMaximize"/>
                <Button Content="âœ•" Style="{StaticResource CloseButtonStyle}" Click="OnWindowClose"/>
            </StackPanel>
        </Grid>
        
        <!-- Header -->
        <Border Grid.Row="1" Background="#2D2D30" Padding="20,15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="View your translation progress and statistics" FontSize="14" 
                           Foreground="#CCCCCC" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>
        
        <!-- Main Content -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Padding="20">
            <StackPanel>
                <!-- Overall Statistics -->
                <GroupBox Header="Overall Progress" Margin="0,0,0,20" 
                        Foreground="White" BorderBrush="#3C3C3C">
                    <StackPanel Margin="15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                <TextBlock Text="Total Files" FontSize="14" FontWeight="Bold" 
                                           Foreground="#007ACC" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="TotalFilesText" Text="0" FontSize="24" FontWeight="Bold" 
                                           Foreground="White" HorizontalAlignment="Center"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                <TextBlock Text="Total Entries" FontSize="14" FontWeight="Bold" 
                                           Foreground="#28A745" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="TotalEntriesText" Text="0" FontSize="24" FontWeight="Bold" 
                                           Foreground="White" HorizontalAlignment="Center"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                <TextBlock Text="Translated" FontSize="14" FontWeight="Bold" 
                                           Foreground="#FFC107" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="TranslatedText" Text="0" FontSize="24" FontWeight="Bold" 
                                           Foreground="White" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                        
                        <ProgressBar x:Name="OverallProgressBar" Height="20" Margin="0,15,0,0" 
                                     Background="#1E1E1E" Foreground="#007ACC"/>
                        
                        <TextBlock x:Name="OverallProgressText" Text="0% Complete" 
                                   HorizontalAlignment="Center" Margin="0,5,0,0" 
                                   FontWeight="SemiBold" Foreground="#CCCCCC"/>
                    </StackPanel>
                </GroupBox>
                
                <!-- File Statistics -->
                <GroupBox Header="File Statistics" Margin="0,0,0,20" 
                          Foreground="White" BorderBrush="#3C3C3C">
                    <StackPanel Margin="15">
                        <DataGrid x:Name="FileStatisticsGrid" 
                                  AutoGenerateColumns="False" CanUserAddRows="False"
                                  Background="Transparent" GridLinesVisibility="Horizontal"
                                  HeadersVisibility="Column" RowHeaderWidth="0"
                                  Height="200">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="File Name" Binding="{Binding FileName}" 
                                                    Width="*" IsReadOnly="True"/>
                                <DataGridTextColumn Header="Total" Binding="{Binding TotalEntries}" 
                                                    Width="80" IsReadOnly="True"/>
                                <DataGridTextColumn Header="Translated" Binding="{Binding TranslatedEntries}" 
                                                    Width="80" IsReadOnly="True"/>
                                <DataGridTextColumn Header="Progress" Binding="{Binding ProgressPercentage, StringFormat={}{0:F1}%}" 
                                                    Width="80" IsReadOnly="True"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </GroupBox>
                
                <!-- Translation Quality -->
                <GroupBox Header="Translation Quality" Margin="0,0,0,20" 
                          Foreground="White" BorderBrush="#3C3C3C">
                    <StackPanel Margin="15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Successful Translations" FontWeight="Bold" 
                                           Foreground="#28A745" Margin="0,0,0,5"/>
                                <TextBlock x:Name="SuccessfulText" Text="0" FontSize="18" 
                                           Foreground="White"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Failed Translations" FontWeight="Bold" 
                                           Foreground="#DC3545" Margin="0,0,0,5"/>
                                <TextBlock x:Name="FailedText" Text="0" FontSize="18" 
                                           Foreground="White"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </GroupBox>
                
                <!-- Time Statistics -->
                <GroupBox Header="Time Statistics" Margin="0,0,0,20" 
                          Foreground="White" BorderBrush="#3C3C3C">
                    <StackPanel Margin="15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                <TextBlock Text="Start Time" FontSize="12" Foreground="#CCCCCC"/>
                                <TextBlock x:Name="StartTimeText" Text="--:--:--" FontSize="14" 
                                           Foreground="White" HorizontalAlignment="Center"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                <TextBlock Text="Elapsed Time" FontSize="12" Foreground="#CCCCCC"/>
                                <TextBlock x:Name="ElapsedTimeText" Text="00:00:00" FontSize="14" 
                                           Foreground="White" HorizontalAlignment="Center"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                <TextBlock Text="Avg. Time/Entry" FontSize="12" Foreground="#CCCCCC"/>
                                <TextBlock x:Name="AvgTimeText" Text="0.0s" FontSize="14" 
                                           Foreground="White" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Footer -->
        <Border Grid.Row="3" Background="#252526" Padding="20" BorderBrush="#3E3E42" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Export Report" Margin="0,0,10,0" 
                        Background="#007ACC" Foreground="White" 
                        BorderThickness="0" Padding="15,8" Cursor="Hand"/>
                <Button Content="Close" 
                        Background="#666666" Foreground="White" 
                        BorderThickness="0" Padding="15,8" Cursor="Hand"/>
            </StackPanel>
        </Border>
    </Grid>
    </Border>
</Window>
