<Window x:Class="ParadoxTranslator.FolderScanResultsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Folder Scan Results" 
        Height="600" Width="900"
        MinWidth="800" MinHeight="500"
        WindowStartupLocation="CenterOwner"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResize"
        UseLayoutRounding="True"
        TextOptions.TextFormattingMode="Display">
    
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="40" 
                      ResizeBorderThickness="5"
                      GlassFrameThickness="0"
                      CornerRadius="10"/>
    </WindowChrome.WindowChrome>
    
    <Window.Resources>
        <Style x:Key="WindowButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="46"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="WindowChrome.IsHitTestVisibleInChrome" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3E3E42"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="CloseButtonStyle" TargetType="Button" BasedOn="{StaticResource WindowButtonStyle}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E81123"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Border Background="#1E1E1E" CornerRadius="10" BorderBrush="#3E3E42" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <Grid Grid.Row="0" Background="#2D2D30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="ðŸ“ Folder Scan Results" FontSize="14" FontWeight="SemiBold" 
                           Foreground="White" VerticalAlignment="Center" Margin="15,0"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="âœ•" Style="{StaticResource CloseButtonStyle}" Click="OnClose"/>
                </StackPanel>
            </Grid>

            <!-- Summary -->
            <Border Grid.Row="1" Background="#252526" BorderBrush="#3E3E42" BorderThickness="0,1,0,1" Padding="20,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Orientation="Vertical">
                        <TextBlock x:Name="FolderPathText" FontSize="13" Foreground="#CCCCCC" Margin="0,0,0,8"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="SummaryText" FontSize="12" Foreground="#CCCCCC"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <Button Grid.Column="1" x:Name="GenerateAllButton" Content="Generate All Missing" 
                            Click="OnGenerateAll"
                            Background="#28A745" Foreground="White" 
                            BorderThickness="0" Padding="20,10" 
                            Cursor="Hand" FontSize="13" FontWeight="SemiBold"
                            VerticalAlignment="Center"/>
                </Grid>
            </Border>

            <!-- Results DataGrid -->
            <DataGrid Grid.Row="2" x:Name="ResultsDataGrid" 
                      Background="#1E1E1E" 
                      Foreground="White"
                      GridLinesVisibility="Horizontal"
                      HorizontalGridLinesBrush="#3E3E42"
                      BorderThickness="0"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      CanUserReorderColumns="False"
                      IsReadOnly="True"
                      HeadersVisibility="Column"
                      SelectionMode="Extended"
                      SelectionUnit="FullRow"
                      RowHeight="32"
                      FontSize="12"
                      Margin="20,10,20,10">
                
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#2D2D30"/>
                        <Setter Property="Foreground" Value="#CCCCCC"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Padding" Value="10,8"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="BorderBrush" Value="#3E3E42"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>
                
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="Transparent"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2D2D30"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#094771"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
                
                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Padding" Value="10,6"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.CellStyle>
                
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Language" Binding="{Binding Language}" Width="100"/>
                    <DataGridTextColumn Header="File Name" Binding="{Binding FileName}" Width="*"/>
                    <DataGridTextColumn Header="Status" Width="100">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Text" Value="Missing"/>
                                <Setter Property="Foreground" Value="#F48771"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Exists}" Value="True">
                                        <Setter Property="Text" Value="âœ“ Exists"/>
                                        <Setter Property="Foreground" Value="#89D185"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTemplateColumn Header="Actions" Width="120">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Generate" 
                                        Background="#007ACC" Foreground="White" 
                                        BorderThickness="0" Padding="12,4" 
                                        FontSize="11" Cursor="Hand"
                                        Click="OnGenerateSingle"
                                        Tag="{Binding}">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Exists}" Value="True">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Bottom Buttons -->
            <Border Grid.Row="3" Background="#252526" BorderBrush="#3E3E42" BorderThickness="0,1,0,0" Padding="20,15">
                <Button Content="Close" Click="OnClose"
                        Background="#6C757D" Foreground="White" 
                        BorderThickness="0" Padding="20,10" 
                        Cursor="Hand" Width="100"
                        HorizontalAlignment="Right"/>
            </Border>
        </Grid>
    </Border>
</Window>
