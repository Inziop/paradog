<Window x:Class="ParadoxTranslator.WelcomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Welcome to Paradox Translator" Height="650" Width="900"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">
    
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="40" 
                      ResizeBorderThickness="0"
                      GlassFrameThickness="0"
                      CornerRadius="8"/>
    </WindowChrome.WindowChrome>
    
    <Border Background="#1E1E1E" CornerRadius="8" BorderBrush="#007ACC" BorderThickness="2">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Title Bar -->
        <Border Grid.Row="0" Background="#2D2D30" CornerRadius="6,6,0,0">
            <Grid>
                <TextBlock Text="â“ Help &amp; Welcome" 
                           FontSize="14" FontWeight="SemiBold" 
                           Foreground="White" VerticalAlignment="Center"
                           Margin="15,0"/>
                
                <Button Content="âœ•" 
                        HorizontalAlignment="Right"
                        Width="46" Height="40"
                        Background="Transparent"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="16"
                        Click="OnGetStartedClick"
                        Cursor="Hand"
                        WindowChrome.IsHitTestVisibleInChrome="True">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#E81123"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>
        
        <!-- Header -->
        <Border Grid.Row="1" Background="#252526" Padding="30,25">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="ðŸŽ®" FontSize="48" Margin="0,0,20,0"/>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Paradox Translator" FontSize="28" FontWeight="Bold" 
                               Foreground="White"/>
                    <TextBlock Text="Your localization companion for Paradox games" FontSize="14" 
                               Foreground="#CCCCCC" Margin="0,8,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>
        
        <!-- Main Content -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Padding="30,20">
            <StackPanel>
                <!-- Quick Start -->
                <Border Background="#252526" CornerRadius="6" Padding="25" Margin="0,0,0,15"
                        BorderBrush="#3E3E42" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="ðŸš€ Quick Start" FontSize="18" FontWeight="Bold" 
                                   Foreground="#007ACC" Margin="0,0,0,20"/>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <Border Width="40" Height="40" Background="#007ACC" CornerRadius="20" 
                                    Margin="0,0,15,0" VerticalAlignment="Top">
                                <TextBlock Text="1" FontSize="20" FontWeight="Bold" 
                                           Foreground="White" HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center" MaxWidth="700">
                                <TextBlock Text="Open your game's localization files" 
                                           FontSize="15" FontWeight="SemiBold" Foreground="White"/>
                                <TextBlock Text="Click 'Open File' and select YAML files from your game directory" 
                                           FontSize="13" Foreground="#CCCCCC" Margin="0,5,0,0" TextWrapping="Wrap"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <Border Width="40" Height="40" Background="#28A745" CornerRadius="20" 
                                    Margin="0,0,15,0" VerticalAlignment="Top">
                                <TextBlock Text="2" FontSize="20" FontWeight="Bold" 
                                           Foreground="White" HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center" MaxWidth="700">
                                <TextBlock Text="Configure your translation settings" 
                                           FontWeight="SemiBold" FontSize="15" Foreground="White"/>
                                <TextBlock Text="Choose source/target languages and enable AI if needed" 
                                           FontSize="13" Foreground="#CCCCCC" Margin="0,5,0,0" TextWrapping="Wrap"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal">
                            <Border Width="40" Height="40" Background="#FFC107" CornerRadius="20" 
                                    Margin="0,0,15,0" VerticalAlignment="Top">
                                <TextBlock Text="3" FontSize="20" FontWeight="Bold" 
                                           Foreground="White" HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center" MaxWidth="700">
                                <TextBlock Text="Start translating!" 
                                           FontWeight="SemiBold" FontSize="15" Foreground="White"/>
                                <TextBlock Text="Use AI translation or edit manually. Export when done!" 
                                           FontSize="13" Foreground="#CCCCCC" Margin="0,5,0,0" TextWrapping="Wrap"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- Supported Games -->
                <GroupBox Header="ðŸŽ® Supported Games" Margin="0,0,0,25" 
                          Foreground="White" BorderBrush="#3C3C3C">
                    <StackPanel Margin="20">
                        <TextBlock Text="Works with all Paradox Interactive games:" FontSize="16" FontWeight="Bold" 
                                   Foreground="#28A745" Margin="0,0,0,15"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="â€¢ Victoria 3" FontWeight="SemiBold" Foreground="White" Margin="0,2"/>
                                <TextBlock Text="â€¢ Europa Universalis IV" FontWeight="SemiBold" Foreground="White" Margin="0,2"/>
                                <TextBlock Text="â€¢ Crusader Kings III" FontWeight="SemiBold" Foreground="White" Margin="0,2"/>
                                <TextBlock Text="â€¢ Hearts of Iron IV" FontWeight="SemiBold" Foreground="White" Margin="0,2"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="â€¢ Stellaris" FontWeight="SemiBold" Foreground="White" Margin="0,2"/>
                                <TextBlock Text="â€¢ Imperator: Rome" FontWeight="SemiBold" Foreground="White" Margin="0,2"/>
                                <TextBlock Text="â€¢ Age of Wonders 4" FontWeight="SemiBold" Foreground="White" Margin="0,2"/>
                                <TextBlock Text="â€¢ And more..." FontWeight="SemiBold" Foreground="White" Margin="0,2"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </GroupBox>
                
                <!-- Features -->
                <GroupBox Header="âœ¨ Key Features" Margin="0,0,0,25" 
                          Foreground="White" BorderBrush="#3C3C3C">
                    <StackPanel Margin="20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="ðŸ”§ Multiple Translation Engines" FontWeight="SemiBold" 
                                           Foreground="White" Margin="0,0,0,5"/>
                                <TextBlock Text="Google, DeepL, Microsoft, OpenAI" FontSize="12" 
                                           Foreground="#CCCCCC" Margin="0,0,0,10"/>
                                
                                <TextBlock Text="ðŸ“Š Real-time Statistics" FontWeight="SemiBold" 
                                           Foreground="White" Margin="0,0,0,5"/>
                                <TextBlock Text="Track your translation progress" FontSize="12" 
                                           Foreground="#CCCCCC" Margin="0,0,0,10"/>
                                
                                <TextBlock Text="ðŸ’¾ Auto Backup" FontWeight="SemiBold" 
                                           Foreground="White" Margin="0,0,0,5"/>
                                <TextBlock Text="Never lose your work" FontSize="12" 
                                           Foreground="#CCCCCC"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="ðŸ” Smart Search" FontWeight="SemiBold" 
                                           Foreground="White" Margin="0,0,0,5"/>
                                <TextBlock Text="Find entries quickly" FontSize="12" 
                                           Foreground="#CCCCCC" Margin="0,0,0,10"/>
                                
                                <TextBlock Text="ðŸ“¤ Export Options" FontWeight="SemiBold" 
                                           Foreground="White" Margin="0,0,0,5"/>
                                <TextBlock Text="JSON, CSV, Excel formats" FontSize="12" 
                                           Foreground="#CCCCCC" Margin="0,0,0,10"/>
                                
                                <TextBlock Text="âš™ï¸ Customizable Settings" FontWeight="SemiBold" 
                                           Foreground="White" Margin="0,0,0,5"/>
                                <TextBlock Text="Configure to your needs" FontSize="12" 
                                           Foreground="#CCCCCC"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </GroupBox>
                
                <!-- Tips -->
                <GroupBox Header="ðŸ’¡ Pro Tips" Margin="0,0,0,25" 
                          Foreground="White" BorderBrush="#3C3C3C">
                    <StackPanel Margin="20">
                        <TextBlock Text="â€¢ Always backup your original files before translating" 
                                   FontSize="14" Foreground="#FFC107" Margin="0,0,0,5"/>
                        <TextBlock Text="â€¢ Use high-quality translation engines for important text" 
                                   FontSize="14" Foreground="#FFC107" Margin="0,0,0,5"/>
                        <TextBlock Text="â€¢ Check the Statistics panel to track your progress" 
                                   FontSize="14" Foreground="#FFC107" Margin="0,0,0,5"/>
                        <TextBlock Text="â€¢ Export your work regularly to avoid data loss" 
                                   FontSize="14" Foreground="#FFC107"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Footer -->
        <Border Grid.Row="2" Background="#2D2D30" Padding="20" BorderBrush="#3C3C3C" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <CheckBox x:Name="DontShowAgainCheckBox" Content="Don't show this again" 
                          Foreground="White" VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Get Started" Click="OnGetStartedClick"
                            Background="#007ACC" Foreground="White" 
                            BorderThickness="0" Padding="20,10" FontWeight="SemiBold" 
                            Cursor="Hand" Margin="0,0,10,0"/>
                    <Button Content="View Tutorial" Click="OnTutorialClick"
                            Background="#28A745" Foreground="White" 
                            BorderThickness="0" Padding="20,10" FontWeight="SemiBold" 
                            Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
    </Border>
</Window>
