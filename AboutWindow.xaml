<Window x:Class="ParadoxTranslator.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About Paradox Translator" Height="540" Width="620"
        MinWidth="550" MaxWidth="800"
        WindowStartupLocation="CenterOwner" 
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        UseLayoutRounding="True"
        TextOptions.TextFormattingMode="Display">
    
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="40" 
                      ResizeBorderThickness="0"
                      GlassFrameThickness="0"
                      CornerRadius="10"/>
    </WindowChrome.WindowChrome>
    
    <Window.Resources>
        <Style x:Key="WindowButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="46"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="WindowChrome.IsHitTestVisibleInChrome" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3E3E42"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="CloseButtonStyle" TargetType="Button" BasedOn="{StaticResource WindowButtonStyle}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E81123"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Border Background="#1E1E1E" CornerRadius="10" BorderBrush="#3E3E42" BorderThickness="1">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Custom Title Bar -->
        <Grid Grid.Row="0" Background="#2D2D30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" x:Name="TitleText" Text="About Paradox Translator" FontSize="14" FontWeight="SemiBold" 
                       Foreground="White" VerticalAlignment="Center" Margin="15,0"/>
            
            <Button Grid.Column="1" Content="✕" Style="{StaticResource CloseButtonStyle}" Click="OnWindowClose"/>
        </Grid>
        
        <!-- Header -->
        <Border Grid.Row="1" Background="#2D2D30" Padding="30,25">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="🎮" FontSize="48" Margin="0,0,20,0"/>
                <StackPanel>
                    <TextBlock x:Name="AppNameText" Text="Paradox Translator" FontSize="28" FontWeight="Bold" 
                               Foreground="White"/>
                    <TextBlock x:Name="VersionText" Text="Version 1.0.0" FontSize="16" 
                               Foreground="#CCCCCC" Margin="0,5,0,0"/>
                    <TextBlock x:Name="SubtitleText" Text="Professional localization tool for Paradox games" FontSize="14" 
                               Foreground="#888888" Margin="0,2,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>
        
        <!-- Main Content -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Padding="30">
            <StackPanel>
                <!-- Description -->
                <TextBlock x:Name="DescriptionText" Text="A powerful WPF application designed specifically for translating Paradox Interactive game localization files. Built with modern technology and user-friendly interface." 
                           FontSize="14" Foreground="#CCCCCC" TextWrapping="Wrap" Margin="0,0,0,25"/>
                
                <!-- Features -->
                <GroupBox Header="✨ Key Features" Margin="0,0,0,20" 
                          Foreground="White" BorderBrush="#3C3C3C">
                    <StackPanel Margin="20">
                        <TextBlock Text="• Multiple translation engines (Google, DeepL, Microsoft, OpenAI)" 
                                   FontSize="14" Foreground="White" Margin="0,0,0,5"/>
                        <TextBlock Text="• Real-time progress tracking and statistics" 
                                   FontSize="14" Foreground="White" Margin="0,0,0,5"/>
                        <TextBlock Text="• Smart search and filtering capabilities" 
                                   FontSize="14" Foreground="White" Margin="0,0,0,5"/>
                        <TextBlock Text="• Export to multiple formats (JSON, CSV, Excel)" 
                                   FontSize="14" Foreground="White" Margin="0,0,0,5"/>
                        <TextBlock Text="• Automatic backup and validation" 
                                   FontSize="14" Foreground="White" Margin="0,0,0,5"/>
                        <TextBlock Text="• Professional UI with dark theme" 
                                   FontSize="14" Foreground="White"/>
                    </StackPanel>
                </GroupBox>
                
                <!-- Supported Games -->
                <GroupBox Header="🎮 Supported Games" Margin="0,0,0,20" 
                          Foreground="White" BorderBrush="#3C3C3C">
                    <StackPanel Margin="20">
                        <TextBlock Text="Victoria 3, Europa Universalis IV, Crusader Kings III, Hearts of Iron IV, Stellaris, Imperator: Rome, and all other Paradox Interactive games with YAML localization files." 
                                   FontSize="14" Foreground="#CCCCCC" TextWrapping="Wrap"/>
                    </StackPanel>
                </GroupBox>
                
                <!-- Technical Info -->
                <GroupBox Header="🔧 Technical Information" Margin="0,0,0,20" 
                          Foreground="White" BorderBrush="#3C3C3C">
                    <StackPanel Margin="20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" Text="Framework:" FontWeight="SemiBold" 
                                       Foreground="White" Margin="0,0,10,5"/>
                            <TextBlock Grid.Column="1" Text=".NET 8.0 WPF" 
                                       Foreground="#CCCCCC" Margin="0,0,0,5"/>
                            
                            <TextBlock Grid.Column="0" Text="Architecture:" FontWeight="SemiBold" 
                                       Foreground="White" Margin="0,0,10,5"/>
                            <TextBlock Grid.Column="1" Text="MVVM Pattern" 
                                       Foreground="#CCCCCC" Margin="0,0,0,5"/>
                            
                            <TextBlock Grid.Column="0" Text="License:" FontWeight="SemiBold" 
                                       Foreground="White" Margin="0,0,10,5"/>
                            <TextBlock Grid.Column="1" Text="MIT License" 
                                       Foreground="#CCCCCC" Margin="0,0,0,5"/>
                            
                            <TextBlock Grid.Column="0" Text="Repository:" FontWeight="SemiBold" 
                                       Foreground="White" Margin="0,0,10,5"/>
                            <TextBlock Grid.Column="1" Text="GitHub - Open Source" 
                                       Foreground="#007ACC" Margin="0,0,0,5"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>
                
                <!-- Credits -->
                <GroupBox Header="🙏 Credits" Margin="0,0,0,20" 
                          Foreground="White" BorderBrush="#3C3C3C">
                    <StackPanel Margin="20">
                        <TextBlock Text="• Paradox Interactive for creating amazing games" 
                                   FontSize="14" Foreground="#CCCCCC" Margin="0,0,0,5"/>
                        <TextBlock Text="• Translation service providers (Google, DeepL, Microsoft, OpenAI)" 
                                   FontSize="14" Foreground="#CCCCCC" Margin="0,0,0,5"/>
                        <TextBlock Text="• The WPF and .NET community" 
                                   FontSize="14" Foreground="#CCCCCC" Margin="0,0,0,5"/>
                        <TextBlock Text="• Contributors and testers" 
                                   FontSize="14" Foreground="#CCCCCC"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Footer -->
        <Border Grid.Row="3" Background="#252526" Padding="20" BorderBrush="#3E3E42" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="GitHubButton" Content="GitHub Repository" Click="OnGitHubClick"
                        Background="#007ACC" Foreground="White" 
                        BorderThickness="0" Padding="15,8" FontWeight="SemiBold" 
                        Cursor="Hand" Margin="0,0,10,0"/>
                <Button x:Name="CloseButton" Content="Close" Click="OnCloseClick"
                        Background="#666666" Foreground="White" 
                        BorderThickness="0" Padding="15,8" FontWeight="SemiBold" 
                        Cursor="Hand"/>
            </StackPanel>
        </Border>
    </Grid>
    </Border>
</Window>
