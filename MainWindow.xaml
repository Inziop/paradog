<Window x:Class="ParadoxTranslator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Paradox Translator" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2D2D30" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="🎮" FontSize="24" Margin="0,0,10,0"/>
                    <TextBlock Text="Paradox Translator" FontSize="20" FontWeight="Bold" 
                               Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="📁 Open Folder" Command="{Binding OpenFolderCommand}" 
                            Margin="0,0,10,0" Background="#007ACC" Foreground="White" 
                            BorderThickness="0" Padding="15,8" FontWeight="SemiBold" Cursor="Hand"/>
                    <Button Content="⚙️ Settings" Command="{Binding OpenSettingsCommand}" 
                            Background="#007ACC" Foreground="White" 
                            BorderThickness="0" Padding="15,8" FontWeight="SemiBold" Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- File List -->
            <Border Grid.Column="0" Background="#1E1E1E" BorderBrush="#3C3C3C" BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Localization Files" FontWeight="Bold" 
                               Foreground="White" Margin="15,15,15,10"/>
                    
                    <ListBox Grid.Row="1" ItemsSource="{Binding Files}" 
                             SelectedItem="{Binding SelectedFile}"
                             Background="Transparent" BorderThickness="0"
                             Margin="10,0,10,10">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#2D2D30" Margin="0,2" Padding="10" 
                                        CornerRadius="4" BorderBrush="#3C3C3C" BorderThickness="1">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <TextBlock Grid.Row="0" Text="{Binding FileName}" 
                                                   FontWeight="Bold" Foreground="White" 
                                                   TextTrimming="CharacterEllipsis"/>
                                        
                                        <TextBlock Grid.Row="1" Text="{Binding ProgressText}" 
                                                   FontSize="12" Foreground="#CCCCCC" 
                                                   Margin="0,2,0,0"/>
                                        
                                        <ProgressBar Grid.Row="2" Value="{Binding ProgressPercentage}" 
                                                     Height="4" Margin="0,5,0,0" 
                                                     Background="#1E1E1E" 
                                                     Foreground="#007ACC"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>
            
            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Background="#3C3C3C" HorizontalAlignment="Stretch"/>
            
            <!-- Translation Area -->
            <Grid Grid.Column="2" Background="#1E1E1E">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Translation Controls -->
                <Border Grid.Row="0" Background="#2D2D30" Padding="15" BorderBrush="#3C3C3C" BorderThickness="0,0,0,1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <ComboBox Width="120" Margin="0,0,10,0">
                                <ComboBoxItem Content="English" Tag="en" IsSelected="True"/>
                                <ComboBoxItem Content="French" Tag="fr"/>
                                <ComboBoxItem Content="German" Tag="de"/>
                                <ComboBoxItem Content="Spanish" Tag="es"/>
                            </ComboBox>
                            
                            <TextBlock Text="→" Foreground="White" VerticalAlignment="Center" Margin="5,0"/>
                            
                            <ComboBox Width="120" Margin="10,0,0,0">
                                <ComboBoxItem Content="Vietnamese" Tag="vi" IsSelected="True"/>
                                <ComboBoxItem Content="Chinese" Tag="zh"/>
                                <ComboBoxItem Content="Japanese" Tag="ja"/>
                                <ComboBoxItem Content="Korean" Tag="ko"/>
                            </ComboBox>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button Content="🔄 Translate All" Command="{Binding TranslateAllCommand}" 
                                    Margin="0,0,10,0" Background="#007ACC" Foreground="White" 
                                    BorderThickness="0" Padding="15,8" FontWeight="SemiBold" Cursor="Hand"/>
                            <Button Content="💾 Save" Command="{Binding SaveCommand}" 
                                    Background="#007ACC" Foreground="White" 
                                    BorderThickness="0" Padding="15,8" FontWeight="SemiBold" Cursor="Hand"/>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- Translation Entries -->
                <DataGrid Grid.Row="1" ItemsSource="{Binding SelectedFile.Entries}" 
                          AutoGenerateColumns="False" CanUserAddRows="False"
                          Background="Transparent" GridLinesVisibility="None"
                          HeadersVisibility="Column" RowHeaderWidth="0"
                          Margin="10">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Key" Binding="{Binding Key}" 
                                            Width="200" IsReadOnly="True"/>
                        
                        <DataGridTextColumn Header="Source" Binding="{Binding Source}" 
                                            Width="*" IsReadOnly="True"/>
                        
                        <DataGridTemplateColumn Header="Target" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <TextBox Text="{Binding Target, UpdateSourceTrigger=PropertyChanged}" 
                                                 Background="#2D2D30" Foreground="White" 
                                                 BorderBrush="#3C3C3C" BorderThickness="1"
                                                 Padding="8,4" VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding StatusIcon}" 
                                                   HorizontalAlignment="Right" 
                                                   VerticalAlignment="Center" 
                                                   Margin="0,0,8,0" 
                                                   FontSize="16"/>
                                    </Grid>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
                
                <!-- Status Bar -->
                <Border Grid.Row="2" Background="#2D2D30" Padding="15" BorderBrush="#3C3C3C" BorderThickness="0,1,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="{Binding StatusMessage}" 
                                   Foreground="#CCCCCC" VerticalAlignment="Center"/>
                        
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <TextBlock Text="Progress: " Foreground="#CCCCCC" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding ProgressText}" Foreground="White" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
    
</Window>
