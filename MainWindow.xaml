<Window x:Class="ParadoxTranslator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Paradox Translator" Height="900" Width="1400"
        WindowStartupLocation="CenterScreen"
        MinHeight="600" MinWidth="1000"
        Background="#1E1E1E">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2D2D30" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="🎮" FontSize="24" Margin="0,0,10,0"/>
                    <TextBlock Text="Paradox Translator" FontSize="20" FontWeight="Bold" 
                               Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="📁 Open Folder" Command="{Binding OpenFolderCommand}" 
                            Margin="0,0,10,0" Background="#007ACC" Foreground="White" 
                            BorderThickness="0" Padding="15,8" FontWeight="SemiBold" Cursor="Hand"
                            ToolTip="Select a folder containing localization files"/>
                    <Button Content="⚙️ Settings" Command="{Binding OpenSettingsCommand}" 
                            Background="#007ACC" Foreground="White" 
                            BorderThickness="0" Padding="15,8" FontWeight="SemiBold" Cursor="Hand"
                            ToolTip="Configure translation settings"/>
                    <Button Content="📊 Statistics" Command="{Binding ShowStatisticsCommand}" 
                            Margin="10,0,0,0" Background="#28A745" Foreground="White" 
                            BorderThickness="0" Padding="15,8" FontWeight="SemiBold" Cursor="Hand"
                            ToolTip="View translation statistics"/>
                    <Button Content="💾 Export" Command="{Binding ExportCommand}" 
                            Margin="10,0,0,0" Background="#6F42C1" Foreground="White" 
                            BorderThickness="0" Padding="15,8" FontWeight="SemiBold" Cursor="Hand"
                            ToolTip="Export translations to file"/>
                    <Button Content="❓ Help" Command="{Binding ShowWelcomeCommand}" 
                            Margin="10,0,0,0" Background="#17A2B8" Foreground="White" 
                            BorderThickness="0" Padding="15,8" FontWeight="SemiBold" Cursor="Hand"
                            ToolTip="Show help and welcome screen"/>
                    <Button Content="ℹ️ About" Command="{Binding ShowAboutCommand}" 
                            Margin="10,0,0,0" Background="#6C757D" Foreground="White" 
                            BorderThickness="0" Padding="15,8" FontWeight="SemiBold" Cursor="Hand"
                            ToolTip="About this application"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- File List -->
            <Border Grid.Column="0" Background="#1E1E1E" BorderBrush="#3C3C3C" BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0" Margin="15,15,15,10">
                        <TextBlock Text="Localization Files" FontWeight="Bold" 
                                   Foreground="White" Margin="0,0,0,10"/>
                        
                        <TextBox x:Name="SearchTextBox" 
                                 Background="#2D2D30" Foreground="White" 
                                 BorderBrush="#3C3C3C" BorderThickness="1"
                                 Padding="8,4" FontSize="12"
                                 TextChanged="OnSearchTextChanged"/>
                    </StackPanel>
                    
                    <ListBox Grid.Row="1" ItemsSource="{Binding Files}" 
                             SelectedItem="{Binding SelectedFile}"
                             Background="Transparent" BorderThickness="0"
                             Margin="10,0,10,10">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#2D2D30" Margin="0,2" Padding="10" 
                                        CornerRadius="4" BorderBrush="#3C3C3C" BorderThickness="1">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <TextBlock Grid.Row="0" Text="{Binding FileName}" 
                                                   FontWeight="Bold" Foreground="White" 
                                                   TextTrimming="CharacterEllipsis"/>
                                        
                                        <TextBlock Grid.Row="1" Text="{Binding ProgressText}" 
                                                   FontSize="12" Foreground="#CCCCCC" 
                                                   Margin="0,2,0,0"/>
                                        
                                        <ProgressBar Grid.Row="2" Value="{Binding ProgressPercentage, Mode=OneWay}" 
                                                     Height="4" Margin="0,5,0,0" 
                                                     Background="#1E1E1E" 
                                                     Foreground="#007ACC"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>
            
            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Background="#3C3C3C" HorizontalAlignment="Stretch"/>
            
            <!-- Translation Area -->
            <Grid Grid.Column="2" Background="#1E1E1E">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Translation Controls -->
                <Border Grid.Row="0" Background="#2D2D30" Padding="15" BorderBrush="#3C3C3C" BorderThickness="0,0,0,1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <ComboBox Width="120" Margin="0,0,10,0"
                                      Background="#2D2D30" Foreground="White"
                                      BorderBrush="#3C3C3C">
                                <ComboBoxItem Content="English" Tag="en" IsSelected="True"
                                              Background="#2D2D30" Foreground="White"/>
                                <ComboBoxItem Content="French" Tag="fr"
                                              Background="#2D2D30" Foreground="White"/>
                                <ComboBoxItem Content="German" Tag="de"
                                              Background="#2D2D30" Foreground="White"/>
                                <ComboBoxItem Content="Spanish" Tag="es"
                                              Background="#2D2D30" Foreground="White"/>
                            </ComboBox>
                            
                            <TextBlock Text="→" Foreground="White" VerticalAlignment="Center" Margin="5,0"/>
                            
                            <ComboBox Width="120" Margin="10,0,0,0"
                                      Background="#2D2D30" Foreground="White"
                                      BorderBrush="#3C3C3C">
                                <ComboBoxItem Content="Vietnamese" Tag="vi" IsSelected="True"
                                              Background="#2D2D30" Foreground="White"/>
                                <ComboBoxItem Content="Chinese" Tag="zh"
                                              Background="#2D2D30" Foreground="White"/>
                                <ComboBoxItem Content="Japanese" Tag="ja"
                                              Background="#2D2D30" Foreground="White"/>
                                <ComboBoxItem Content="Korean" Tag="ko"
                                              Background="#2D2D30" Foreground="White"/>
                            </ComboBox>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button Content="🔄 Translate All" Command="{Binding TranslateAllCommand}" 
                                    Margin="0,0,10,0" Background="#007ACC" Foreground="White" 
                                    BorderThickness="0" Padding="15,8" FontWeight="SemiBold" Cursor="Hand"
                                    ToolTip="Translate all entries in the selected file"/>
                            <Button Content="💾 Save" Command="{Binding SaveCommand}" 
                                    Background="#28A745" Foreground="White" 
                                    BorderThickness="0" Padding="15,8" FontWeight="SemiBold" Cursor="Hand"
                                    ToolTip="Save changes to the original file"/>
                            <Button Content="🔄 Refresh" Command="{Binding RefreshCommand}" 
                                    Margin="10,0,0,0" Background="#6F42C1" Foreground="White" 
                                    BorderThickness="0" Padding="15,8" FontWeight="SemiBold" Cursor="Hand"
                                    ToolTip="Refresh the current file"/>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- Translation Entries -->
                <DataGrid Grid.Row="1" ItemsSource="{Binding SelectedFile.Entries}" 
                          AutoGenerateColumns="False" CanUserAddRows="False"
                          Background="Transparent" GridLinesVisibility="None"
                          HeadersVisibility="Column" RowHeaderWidth="0"
                          Margin="10">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="Key" Width="200" IsReadOnly="True">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Key}" 
                                               Foreground="White" 
                                               TextWrapping="Wrap" 
                                               Padding="8,4"
                                               VerticalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <DataGridTemplateColumn Header="Source" Width="*" IsReadOnly="True">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Source}" 
                                               Foreground="White" 
                                               TextWrapping="Wrap" 
                                               Padding="8,4"
                                               VerticalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <DataGridTemplateColumn Header="Target" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <TextBox Text="{Binding Target, UpdateSourceTrigger=PropertyChanged}" 
                                                 Background="#2D2D30" Foreground="White" 
                                                 BorderBrush="#3C3C3C" BorderThickness="1"
                                                 Padding="8,4" VerticalAlignment="Stretch"
                                                 TextWrapping="Wrap" AcceptsReturn="True"
                                                 VerticalScrollBarVisibility="Auto"
                                                 MinHeight="40"/>
                                        <TextBlock Text="{Binding StatusIcon}" 
                                                   HorizontalAlignment="Right" 
                                                   VerticalAlignment="Top" 
                                                   Margin="0,4,8,0" 
                                                   FontSize="16"/>
                                    </Grid>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
                
                <!-- Status Bar -->
                <Border Grid.Row="2" Background="#2D2D30" Padding="15" BorderBrush="#3C3C3C" BorderThickness="0,1,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="{Binding StatusMessage}" 
                                   Foreground="#CCCCCC" VerticalAlignment="Center"/>
                        
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <TextBlock Text="Progress: " Foreground="#CCCCCC" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding ProgressText}" Foreground="White" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
    
</Window>
