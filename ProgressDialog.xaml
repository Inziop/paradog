<Window x:Class="ParadoxTranslator.ProgressDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Translation Progress" Height="300" Width="500"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="#1E1E1E" Foreground="White">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2D2D30" Padding="20">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="ðŸ”„" FontSize="24" Margin="0,0,10,0"/>
                <StackPanel>
                    <TextBlock Text="Translating..." FontSize="18" FontWeight="Bold" 
                               Foreground="White"/>
                    <TextBlock x:Name="StatusText" Text="Preparing translation..." FontSize="12" 
                               Foreground="#CCCCCC" Margin="0,2,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>
        
        <!-- Main Content -->
        <StackPanel Grid.Row="1" Margin="30">
            <!-- Overall Progress -->
            <StackPanel Margin="0,0,0,20">
                <TextBlock Text="Overall Progress" FontSize="14" FontWeight="Bold" 
                           Foreground="White" Margin="0,0,0,10"/>
                <ProgressBar x:Name="OverallProgressBar" Height="20" 
                             Background="#1E1E1E" Foreground="#007ACC"/>
                <TextBlock x:Name="OverallProgressText" Text="0 / 0 entries" 
                           HorizontalAlignment="Center" Margin="0,5,0,0" 
                           FontWeight="SemiBold" Foreground="#CCCCCC"/>
            </StackPanel>
            
            <!-- Current Entry -->
            <StackPanel Margin="0,0,0,20">
                <TextBlock Text="Current Entry" FontSize="14" FontWeight="Bold" 
                           Foreground="White" Margin="0,0,0,10"/>
                <Border Background="#2D2D30" Padding="15" CornerRadius="4" 
                        BorderBrush="#3C3C3C" BorderThickness="1">
                    <StackPanel>
                        <TextBlock x:Name="CurrentKeyText" Text="Key: Loading..." 
                                   FontWeight="SemiBold" Foreground="White" Margin="0,0,0,5"/>
                        <TextBlock x:Name="CurrentSourceText" Text="Source: Loading..." 
                                   FontSize="12" Foreground="#CCCCCC" Margin="0,0,0,5"/>
                        <TextBlock x:Name="CurrentTargetText" Text="Target: Translating..." 
                                   FontSize="12" Foreground="#28A745"/>
                    </StackPanel>
                </Border>
            </StackPanel>
            
            <!-- Statistics -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                    <TextBlock Text="Completed" FontSize="12" Foreground="#CCCCCC" 
                               HorizontalAlignment="Center"/>
                    <TextBlock x:Name="CompletedText" Text="0" FontSize="18" FontWeight="Bold" 
                               Foreground="#28A745" HorizontalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                    <TextBlock Text="Failed" FontSize="12" Foreground="#CCCCCC" 
                               HorizontalAlignment="Center"/>
                    <TextBlock x:Name="FailedText" Text="0" FontSize="18" FontWeight="Bold" 
                               Foreground="#DC3545" HorizontalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                    <TextBlock Text="Remaining" FontSize="12" Foreground="#CCCCCC" 
                               HorizontalAlignment="Center"/>
                    <TextBlock x:Name="RemainingText" Text="0" FontSize="18" FontWeight="Bold" 
                               Foreground="#FFC107" HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </StackPanel>
        
        <!-- Footer -->
        <Border Grid.Row="2" Background="#2D2D30" Padding="20" BorderBrush="#3C3C3C" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="CancelButton" Content="Cancel" 
                        Background="#DC3545" Foreground="White" 
                        BorderThickness="0" Padding="15,8" FontWeight="SemiBold" 
                        Cursor="Hand" Click="OnCancelClick"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
