<Window x:Class="ParadoxTranslator.ExportOptionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Export Options" Height="280" Width="420"
        WindowStartupLocation="CenterOwner" 
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize">
    
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="40" 
                      ResizeBorderThickness="0"
                      GlassFrameThickness="0"
                      CornerRadius="10"/>
    </WindowChrome.WindowChrome>
    
    <Window.Resources>
        <Style x:Key="WindowButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="46"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="WindowChrome.IsHitTestVisibleInChrome" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3E3E42"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="CloseButtonStyle" TargetType="Button" BasedOn="{StaticResource WindowButtonStyle}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E81123"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Border Background="#1E1E1E" CornerRadius="10" BorderBrush="#3E3E42" BorderThickness="1">
  <Grid Margin="0">
    <Grid.RowDefinitions>
      <RowDefinition Height="40"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <!-- Custom Title Bar -->
    <Grid Grid.Row="0" Background="#2D2D30">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="Auto"/>
      </Grid.ColumnDefinitions>
      
      <TextBlock Grid.Column="0" Text="Export Options" FontSize="14" FontWeight="SemiBold" 
                 Foreground="White" VerticalAlignment="Center" Margin="15,0"/>
      
      <Button Grid.Column="1" Content="âœ•" Style="{StaticResource CloseButtonStyle}" Click="OnWindowClose"/>
    </Grid>

    <StackPanel Grid.Row="1" Margin="20,15">
      <TextBlock Text="Choose export format:" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,8"/>
      <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
        <RadioButton x:Name="CsvRadio" Content="CSV" Foreground="White" IsChecked="True" Margin="0,0,16,0"/>
        <RadioButton x:Name="JsonRadio" Content="JSON" Foreground="White" Margin="0,0,16,0"/>
        <RadioButton x:Name="YamlRadio" Content="YAML (Paradox)" Foreground="White"/>
      </StackPanel>

      <TextBlock Text="Scope:" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,8"/>
      <StackPanel Orientation="Vertical">
        <RadioButton x:Name="AllFilesRadio" Content="Export all open files" Foreground="White" IsChecked="True" Margin="0,0,0,5"/>
        <RadioButton x:Name="SelectedFileRadio" Content="Only export selected file" Foreground="White"/>
      </StackPanel>
    </StackPanel>

    <Border Grid.Row="2" Background="#252526" BorderBrush="#3E3E42" BorderThickness="0,1,0,0" Padding="20,12">
      <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
      <Button Content="Cancel" Width="90" Margin="0,0,8,0" Click="OnCancel"
              Background="#6C757D" Foreground="White" BorderThickness="0" Padding="12,8" Cursor="Hand"/>
      <Button Content="Continue" Width="100" Background="#007ACC" Click="OnContinue"
              Foreground="White" BorderThickness="0" Padding="12,8" Cursor="Hand"/>
    </StackPanel>
    </Border>
  </Grid>
  </Border>
</Window>
