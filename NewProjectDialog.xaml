<Window x:Class="ParadoxTranslator.NewProjectDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create New Project" 
        Height="500" Width="520"
        MinWidth="480" MaxWidth="700"
        WindowStartupLocation="CenterOwner"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        UseLayoutRounding="True"
        TextOptions.TextFormattingMode="Display">
    
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="40" 
                      ResizeBorderThickness="0"
                      GlassFrameThickness="0"
                      CornerRadius="10"/>
    </WindowChrome.WindowChrome>
    
    <Window.Resources>
        <Style x:Key="WindowButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="46"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="WindowChrome.IsHitTestVisibleInChrome" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3E3E42"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="CloseButtonStyle" TargetType="Button" BasedOn="{StaticResource WindowButtonStyle}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E81123"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Border Background="#1E1E1E" CornerRadius="10" BorderBrush="#3E3E42" BorderThickness="1">
        <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Custom Title Bar -->
        <Grid Grid.Row="0" Background="#2D2D30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" Text="Create New Project" FontSize="14" FontWeight="SemiBold" 
                       Foreground="White" VerticalAlignment="Center" Margin="15,0"/>
            
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Content="âœ•" Style="{StaticResource CloseButtonStyle}" Click="OnClose"/>
            </StackPanel>
        </Grid>

        <!-- Header -->
        <StackPanel Grid.Row="1" Margin="30,20,30,10">
            <TextBlock Text="Create New Project" FontSize="22" FontWeight="Bold" 
                       Foreground="White" Margin="0,0,0,8"/>
            <TextBlock Text="Set up your localization project" 
                       FontSize="13" Foreground="#CCCCCC"/>
        </StackPanel>

        <!-- Form -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="30,0">
            <StackPanel>
            <!-- Project Name -->
            <TextBlock Text="Project Name *" FontSize="13" 
                       Foreground="#CCCCCC" Margin="0,0,0,5"/>
            <TextBox x:Name="ProjectNameTextBox" 
                     Background="#2D2D30" Foreground="White" 
                     BorderBrush="#3E3E42" Padding="10,8" 
                     FontSize="13" Margin="0,0,0,15">
                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="4"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>

            <!-- Game Type -->
            <TextBlock Text="Game Type (Optional)" FontSize="13" 
                       Foreground="#CCCCCC" Margin="0,0,0,5"/>
            <ComboBox x:Name="GameTypeComboBox" 
                      Style="{StaticResource ModernComboBox}"
                      Padding="10,8" 
                      FontSize="13" Margin="0,0,0,15"
                      Background="#FFFFFF" Foreground="#000000"
                      TextElement.Foreground="#000000">
                <ComboBox.Resources>
                    <Style TargetType="TextBlock">
                        <Setter Property="Foreground" Value="#000000"/>
                    </Style>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Foreground" Value="#000000"/>
                        <Setter Property="Background" Value="#FFFFFF"/>
                    </Style>
                </ComboBox.Resources>
                <ComboBoxItem Tag="HoI4">
                    <TextBlock Text="Hearts of Iron IV" Foreground="Black"/>
                </ComboBoxItem>
                <ComboBoxItem Tag="Stellaris">
                    <TextBlock Text="Stellaris" Foreground="Black"/>
                </ComboBoxItem>
                <ComboBoxItem Tag="CK3">
                    <TextBlock Text="Crusader Kings III" Foreground="Black"/>
                </ComboBoxItem>
                <ComboBoxItem Tag="EU4">
                    <TextBlock Text="Europa Universalis IV" Foreground="Black"/>
                </ComboBoxItem>
                <ComboBoxItem Tag="Victoria3">
                    <TextBlock Text="Victoria 3" Foreground="Black"/>
                </ComboBoxItem>
                <ComboBoxItem Tag="Other" IsSelected="True">
                    <TextBlock Text="Other" Foreground="Black"/>
                </ComboBoxItem>
            </ComboBox>

            <!-- Description -->
            <TextBlock Text="Description (Optional)" FontSize="13" 
                       Foreground="#CCCCCC" Margin="0,0,0,5"/>
            <TextBox x:Name="DescriptionTextBox" 
                     Background="#2D2D30" Foreground="White" 
                     BorderBrush="#3E3E42" Padding="10,8" 
                     FontSize="13" TextWrapping="Wrap" 
                     AcceptsReturn="True" Height="80" 
                     VerticalScrollBarVisibility="Auto">
                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="4"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>

            <!-- Languages -->
            <Grid Margin="0,15,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Source Language" FontSize="13" 
                               Foreground="#CCCCCC" Margin="0,0,0,5"/>
                    <ComboBox x:Name="SourceLanguageComboBox" 
                              Style="{StaticResource ModernComboBox}"
                              Padding="10,8" 
                              FontSize="13"
                              Background="#FFFFFF" Foreground="#000000"
                              TextElement.Foreground="#000000">
                        <ComboBox.Resources>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#000000"/>
                            </Style>
                            <Style TargetType="ComboBoxItem">
                                <Setter Property="Foreground" Value="#000000"/>
                                <Setter Property="Background" Value="#FFFFFF"/>
                            </Style>
                        </ComboBox.Resources>
                        <ComboBoxItem Tag="en" IsSelected="True">
                            <TextBlock Text="English" Foreground="Black"/>
                        </ComboBoxItem>
                        <ComboBoxItem Tag="fr">
                            <TextBlock Text="French" Foreground="Black"/>
                        </ComboBoxItem>
                        <ComboBoxItem Tag="de">
                            <TextBlock Text="German" Foreground="Black"/>
                        </ComboBoxItem>
                        <ComboBoxItem Tag="es">
                            <TextBlock Text="Spanish" Foreground="Black"/>
                        </ComboBoxItem>
                    </ComboBox>
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <TextBlock Text="Target Language" FontSize="13" 
                               Foreground="#CCCCCC" Margin="0,0,0,5"/>
                    <ComboBox x:Name="TargetLanguageComboBox" 
                              Style="{StaticResource ModernComboBox}"
                              Padding="10,8" 
                              FontSize="13"
                              Background="#FFFFFF" Foreground="#000000"
                              TextElement.Foreground="#000000">
                        <ComboBox.Resources>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#000000"/>
                            </Style>
                            <Style TargetType="ComboBoxItem">
                                <Setter Property="Foreground" Value="#000000"/>
                                <Setter Property="Background" Value="#FFFFFF"/>
                            </Style>
                        </ComboBox.Resources>
                        <ComboBoxItem Tag="vi" IsSelected="True">
                            <TextBlock Text="Vietnamese" Foreground="Black"/>
                        </ComboBoxItem>
                        <ComboBoxItem Tag="zh">
                            <TextBlock Text="Chinese" Foreground="Black"/>
                        </ComboBoxItem>
                        <ComboBoxItem Tag="ja">
                            <TextBlock Text="Japanese" Foreground="Black"/>
                        </ComboBoxItem>
                        <ComboBoxItem Tag="ko">
                            <TextBlock Text="Korean" Foreground="Black"/>
                        </ComboBoxItem>
                    </ComboBox>
                </StackPanel>
            </Grid>
        </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <Border Grid.Row="3" Background="#252526" BorderBrush="#3E3E42" BorderThickness="0,1,0,0" Padding="30,15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel" Click="OnCancel"
                    Background="#6C757D" Foreground="White" 
                    BorderThickness="0" Padding="20,10" 
                    Margin="0,0,10,0" Cursor="Hand" Width="100"/>
            <Button Content="Create" Click="OnCreate"
                    Background="#007ACC" Foreground="White" 
                    BorderThickness="0" Padding="20,10" 
                    Cursor="Hand" Width="100"/>
        </StackPanel>
        </Border>
    </Grid>
    </Border>
</Window>
