<Window x:Class="ParadoxTranslator.ComparisonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="File Version Comparison" 
        Height="800" Width="1400"
        WindowStartupLocation="CenterOwner"
        MinHeight="600" MinWidth="1000"
        Background="#1E1E1E"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResize">
    
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="40" 
                      ResizeBorderThickness="5"
                      GlassFrameThickness="0"
                      CornerRadius="8"/>
    </WindowChrome.WindowChrome>
    
    <Window.Resources>
        <!-- Color brushes for change types -->
        <SolidColorBrush x:Key="NewEntryBrush" Color="#28A745"/>
        <SolidColorBrush x:Key="ModifiedEntryBrush" Color="#FFC107"/>
        <SolidColorBrush x:Key="DeletedEntryBrush" Color="#DC3545"/>
        <SolidColorBrush x:Key="UnchangedEntryBrush" Color="#6C757D"/>
        
        <Style x:Key="WindowButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="46"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="WindowChrome.IsHitTestVisibleInChrome" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3E3E42"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="CloseButtonStyle" TargetType="Button" BasedOn="{StaticResource WindowButtonStyle}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E81123"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Filter Button Style - FORCE BLACK TEXT -->
        <Style x:Key="FilterToggleButtonStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="#007ACC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center">
                                <ContentPresenter.Resources>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ToggleButton}}"/>
                                    </Style>
                                </ContentPresenter.Resources>
                            </ContentPresenter>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="#007ACC"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E6E6E6"/>
                </Trigger>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsChecked" Value="True"/>
                        <Condition Property="IsMouseOver" Value="True"/>
                    </MultiTrigger.Conditions>
                    <Setter Property="Background" Value="#005A9E"/>
                    <Setter Property="Foreground" Value="White"/>
                </MultiTrigger>
            </Style.Triggers>
        </Style>
        
        <!-- Button Style cho New (Xanh) -->
        <Style x:Key="NewButtonStyle" TargetType="ToggleButton" BasedOn="{StaticResource FilterToggleButtonStyle}">
            <Setter Property="Background" Value="#D4EDDA"/>
            <Setter Property="Foreground" Value="#155724"/>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="#28A745"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Button Style cho Modified (Vàng) -->
        <Style x:Key="ModifiedButtonStyle" TargetType="ToggleButton" BasedOn="{StaticResource FilterToggleButtonStyle}">
            <Setter Property="Background" Value="#FFF3CD"/>
            <Setter Property="Foreground" Value="#856404"/>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="#FFC107"/>
                    <Setter Property="Foreground" Value="#212529"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Button Style cho Deleted (Đỏ) -->
        <Style x:Key="DeletedButtonStyle" TargetType="ToggleButton" BasedOn="{StaticResource FilterToggleButtonStyle}">
            <Setter Property="Background" Value="#F8D7DA"/>
            <Setter Property="Foreground" Value="#721C24"/>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="#DC3545"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border Background="#1E1E1E" CornerRadius="8" BorderBrush="#3E3E42" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Custom Title Bar -->
            <Border Grid.Row="0" Background="#2D2D30" CornerRadius="8,8,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="15,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="📊" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="File Version Comparison" 
                                   FontSize="14" FontWeight="SemiBold" 
                                   Foreground="White"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="─" Style="{StaticResource WindowButtonStyle}" Click="OnMinimize"/>
                        <Button Content="□" Style="{StaticResource WindowButtonStyle}" Click="OnMaximize"/>
                        <Button Content="✕" Style="{StaticResource CloseButtonStyle}" Click="OnClose"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Version Info -->
            <Border Grid.Row="1" Background="#252526" Padding="20,15" BorderBrush="#3E3E42" BorderThickness="0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Old Version -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="OLD VERSION" Foreground="#858585" FontSize="11" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBlock x:Name="OldVersionText" Text="v1.0 (2024-01-01)" Foreground="White" FontSize="14" FontWeight="SemiBold"/>
                        <TextBlock x:Name="OldFileNameText" Text="game_concepts.yml" Foreground="#CCCCCC" FontSize="12" Margin="0,2,0,0"/>
                    </StackPanel>
                    
                    <!-- Arrow -->
                    <TextBlock Grid.Column="1" Text="→" FontSize="24" Foreground="#007ACC" 
                               VerticalAlignment="Center" Margin="20,0"/>
                    
                    <!-- New Version -->
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="NEW VERSION" Foreground="#858585" FontSize="11" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBlock x:Name="NewVersionText" Text="v1.1 (2025-10-26)" Foreground="White" FontSize="14" FontWeight="SemiBold"/>
                        <TextBlock x:Name="NewFileNameText" Text="game_concepts.yml" Foreground="#CCCCCC" FontSize="12" Margin="0,2,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Statistics Bar -->
            <Border Grid.Row="2" Background="#2D2D30" Padding="20,12" BorderBrush="#3E3E42" BorderThickness="0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Statistics -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <Border Background="{StaticResource NewEntryBrush}" CornerRadius="3" Padding="8,4" Margin="0,0,10,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🟢" FontSize="12" Margin="0,0,4,0"/>
                                <TextBlock x:Name="NewCountText" Text="15 New" Foreground="White" FontWeight="SemiBold" FontSize="12"/>
                            </StackPanel>
                        </Border>
                        
                        <Border Background="{StaticResource ModifiedEntryBrush}" CornerRadius="3" Padding="8,4" Margin="0,0,10,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🟡" FontSize="12" Margin="0,0,4,0"/>
                                <TextBlock x:Name="ModifiedCountText" Text="8 Modified" Foreground="White" FontWeight="SemiBold" FontSize="12"/>
                            </StackPanel>
                        </Border>
                        
                        <Border Background="{StaticResource DeletedEntryBrush}" CornerRadius="3" Padding="8,4" Margin="0,0,10,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🔴" FontSize="12" Margin="0,0,4,0"/>
                                <TextBlock x:Name="DeletedCountText" Text="3 Deleted" Foreground="White" FontWeight="SemiBold" FontSize="12"/>
                            </StackPanel>
                        </Border>
                        
                        <Border Background="{StaticResource UnchangedEntryBrush}" CornerRadius="3" Padding="8,4">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⚪" FontSize="12" Margin="0,0,4,0"/>
                                <TextBlock x:Name="UnchangedCountText" Text="245 Unchanged" Foreground="White" FontWeight="SemiBold" FontSize="12"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                    
                    <!-- Filter Buttons -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <TextBlock Text="Filter:" Foreground="#CCCCCC" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <ToggleButton x:Name="ShowAllButton" Content="All" IsChecked="True" 
                                     Style="{StaticResource FilterToggleButtonStyle}"
                                     Margin="0,0,5,0" Checked="OnFilterChanged" Unchecked="OnFilterChanged"/>
                        <ToggleButton x:Name="ShowNewButton" Content="🟢 New" 
                                     Style="{StaticResource NewButtonStyle}"
                                     Margin="0,0,5,0" Checked="OnFilterChanged" Unchecked="OnFilterChanged"/>
                        <ToggleButton x:Name="ShowModifiedButton" Content="🟡 Modified" 
                                     Style="{StaticResource ModifiedButtonStyle}"
                                     Margin="0,0,5,0" Checked="OnFilterChanged" Unchecked="OnFilterChanged"/>
                        <ToggleButton x:Name="ShowDeletedButton" Content="🔴 Deleted" 
                                     Style="{StaticResource DeletedButtonStyle}"
                                     Checked="OnFilterChanged" Unchecked="OnFilterChanged"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Comparison Grid -->
            <DataGrid x:Name="ComparisonDataGrid" Grid.Row="3"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      HeadersVisibility="Column"
                      GridLinesVisibility="All"
                      Background="Transparent"
                      BorderThickness="0"
                      FontSize="12"
                      ScrollViewer.CanContentScroll="True"
                      VirtualizingPanel.IsVirtualizing="True"
                      VirtualizingPanel.VirtualizationMode="Recycling"
                      RowHeaderWidth="0"
                      VerticalGridLinesBrush="#3E3E42"
                      HorizontalGridLinesBrush="#2D2D30">
                <DataGrid.Resources>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="#1E1E1E"/>
                        <Setter Property="MinHeight" Value="80"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ChangeType}" Value="New">
                                <Setter Property="Background" Value="#0E3A0E"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding ChangeType}" Value="Modified">
                                <Setter Property="Background" Value="#3A2E0E"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding ChangeType}" Value="Deleted">
                                <Setter Property="Background" Value="#3A0E0E"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#252526"/>
                        <Setter Property="Foreground" Value="#CCCCCC"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="FontSize" Value="11"/>
                        <Setter Property="Padding" Value="12,10"/>
                        <Setter Property="BorderBrush" Value="#3E3E42"/>
                        <Setter Property="BorderThickness" Value="0,0,1,1"/>
                    </Style>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderBrush" Value="#3E3E42"/>
                        <Setter Property="BorderThickness" Value="0,0,1,0"/>
                        <Setter Property="Padding" Value="12,10"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridCell">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter VerticalAlignment="Top"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </DataGrid.Resources>
                
                <DataGrid.Columns>
                    <!-- Checkbox -->
                    <DataGridCheckBoxColumn Header="☑" Binding="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}"
                                          Width="45" MinWidth="45" MaxWidth="45"/>
                    
                    <!-- Key -->
                    <DataGridTextColumn Header="KEY" Binding="{Binding Key}"
                                      Width="200" MinWidth="150" IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#D4D4D4"/>
                                <Setter Property="FontFamily" Value="Consolas"/>
                                <Setter Property="TextWrapping" Value="Wrap"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    
                    <!-- Old Source Text -->
                    <DataGridTemplateColumn Header="OLD SOURCE (EN)" Width="*" MinWidth="200">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding OldSourceText}" 
                                         TextWrapping="Wrap" 
                                         Foreground="#CCCCCC"
                                         FontSize="12"
                                         LineHeight="18">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ChangeType}" Value="New">
                                                    <Setter Property="Foreground" Value="#666666"/>
                                                    <Setter Property="FontStyle" Value="Italic"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    
                    <!-- New Source Text -->
                    <DataGridTemplateColumn Header="NEW SOURCE (EN)" Width="*" MinWidth="200">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border>
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ChangeType}" Value="New">
                                                    <Setter Property="Background" Value="#28A74520"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding ChangeType}" Value="Modified">
                                                    <Setter Property="Background" Value="#FFC10720"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock Text="{Binding NewSourceText}" 
                                             TextWrapping="Wrap" 
                                             Foreground="White"
                                             FontSize="12"
                                             FontWeight="SemiBold"
                                             LineHeight="18"
                                             Padding="4"/>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    
                    <!-- Existing Translation -->
                    <DataGridTemplateColumn Header="OLD TRANSLATION" Width="*" MinWidth="200">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding ExistingTranslation}" 
                                         TextWrapping="Wrap" 
                                         Foreground="#B0BEC5"
                                         FontSize="12"
                                         LineHeight="18"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    
                    <!-- New Translation (Editable) -->
                    <DataGridTemplateColumn Header="NEW TRANSLATION ✏️" Width="*" MinWidth="250">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <TextBox Grid.Row="0"
                                           Text="{Binding UpdatedTranslation, UpdateSourceTrigger=PropertyChanged}"
                                           TextWrapping="Wrap"
                                           AcceptsReturn="True"
                                           Background="#2D2D30"
                                           Foreground="White"
                                           BorderBrush="#007ACC"
                                           BorderThickness="1"
                                           FontSize="12"
                                           Padding="8"
                                           MinLines="2"
                                           MaxLines="8"
                                           VerticalScrollBarVisibility="Auto"/>
                                    
                                    <TextBlock Grid.Row="1" 
                                             Text="{Binding StatusMessage}" 
                                             Foreground="#858585"
                                             FontSize="10"
                                             FontStyle="Italic"
                                             Margin="0,4,0,0"/>
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Action Bar -->
            <Border Grid.Row="4" Background="#2D2D30" Padding="20,15" BorderBrush="#3E3E42" BorderThickness="0,1,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Selection Actions -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <Button Content="Select All" Click="OnSelectAll" 
                                Background="#0E639C" Foreground="White" 
                                Padding="12,6" Margin="0,0,10,0" BorderThickness="0" Cursor="Hand"/>
                        <Button Content="Select New Only" Click="OnSelectNew"
                                Background="#28A745" Foreground="White" 
                                Padding="12,6" Margin="0,0,10,0" BorderThickness="0" Cursor="Hand"/>
                        <Button Content="Deselect All" Click="OnDeselectAll"
                                Background="#3C3C3C" Foreground="White" 
                                Padding="12,6" Margin="0,0,10,0" BorderThickness="0" Cursor="Hand"/>
                    </StackPanel>
                    
                    <!-- Main Actions -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <Button Content="💾 Export Report" Click="OnExportReport"
                                Background="#17A2B8" Foreground="White" 
                                Padding="12,6" Margin="0,0,10,0" BorderThickness="0" Cursor="Hand"/>
                        <Button Content="🤖 AI Translate Selected" Click="OnAiTranslate"
                                Background="#8E44AD" Foreground="White" 
                                Padding="12,6" Margin="0,0,10,0" BorderThickness="0" Cursor="Hand" FontWeight="SemiBold"/>
                        <Button Content="✅ Apply Changes" Click="OnApplyChanges"
                                Background="#28A745" Foreground="White" 
                                Padding="16,6" Margin="0,0,10,0" BorderThickness="0" Cursor="Hand" FontWeight="Bold" FontSize="13"/>
                        <Button Content="❌ Cancel" Click="OnClose"
                                Background="#DC3545" Foreground="White" 
                                Padding="12,6" BorderThickness="0" Cursor="Hand"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
