<Window x:Class="ParadoxTranslator.ProjectSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Paradox Translator - Welcome" 
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize">
    
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="40" 
                      ResizeBorderThickness="0"
                      GlassFrameThickness="0"
                      CornerRadius="10"/>
    </WindowChrome.WindowChrome>
    
    <Window.Resources>
        <Style x:Key="WindowButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="46"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="WindowChrome.IsHitTestVisibleInChrome" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3E3E42"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="CloseButtonStyle" TargetType="Button" BasedOn="{StaticResource WindowButtonStyle}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E81123"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Border Background="#1E1E1E" CornerRadius="10" BorderBrush="#3E3E42" BorderThickness="1">
        <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Custom Title Bar -->
        <Grid Grid.Row="0" Background="#2D2D30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0">
                <TextBlock Text="ðŸŽ®" FontSize="18" Margin="0,0,8,0"/>
                <TextBlock Text="Paradox Translator" FontSize="14" FontWeight="SemiBold" 
                           Foreground="White" VerticalAlignment="Center"/>
            </StackPanel>
            
            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <Button Content="â”€" Style="{StaticResource WindowButtonStyle}" Click="OnMinimize"/>
                <Button Content="âœ•" Style="{StaticResource CloseButtonStyle}" Click="OnClose"/>
            </StackPanel>
        </Grid>

        <!-- Header -->
        <Border Grid.Row="1" Background="#2D2D30" Padding="30,25">
            <StackPanel HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                    <TextBlock Text="ðŸŽ®" FontSize="48" Margin="0,0,15,0"/>
                    <TextBlock Text="Paradox Translator" FontSize="36" FontWeight="Bold" 
                               Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>
                <TextBlock Text="Manage your localization projects" 
                           FontSize="14" Foreground="#CCCCCC" 
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="2" Margin="40,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left: Create/Open Project -->
            <Border Grid.Column="0" Background="#252526" CornerRadius="8" Padding="30">
                <StackPanel>
                    <TextBlock Text="Get Started" FontSize="22" FontWeight="Bold" 
                               Foreground="White" Margin="0,0,0,20"/>
                    
                    <!-- New Project Button -->
                    <Button x:Name="NewProjectButton" Click="OnNewProject"
                            Background="#007ACC" Foreground="White" 
                            BorderThickness="0" Padding="20,15" 
                            Margin="0,0,0,15" Cursor="Hand">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="âž•" FontSize="24" Margin="0,0,15,0"/>
                            <StackPanel>
                                <TextBlock Text="Create New Project" 
                                          FontSize="16" FontWeight="SemiBold"/>
                                <TextBlock Text="Start a fresh translation project" 
                                          FontSize="12" Foreground="#E6E6E6" 
                                          Margin="0,4,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Button>

                    <!-- Open Project Button -->
                    <Button x:Name="OpenProjectButton" Click="OnOpenProject"
                            Background="#28A745" Foreground="White" 
                            BorderThickness="0" Padding="20,15" 
                            Cursor="Hand">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“‚" FontSize="24" Margin="0,0,15,0"/>
                            <StackPanel>
                                <TextBlock Text="Open Existing Project" 
                                          FontSize="16" FontWeight="SemiBold"/>
                                <TextBlock Text="Continue working on a project" 
                                          FontSize="12" Foreground="#E6E6E6" 
                                          Margin="0,4,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Button>

                    <!-- Info Section -->
                    <Border Background="#2D2D30" CornerRadius="6" 
                            Padding="15" Margin="0,30,0,0">
                        <StackPanel>
                            <TextBlock Text="ðŸ’¡ Quick Tips" 
                                      FontSize="14" FontWeight="SemiBold" 
                                      Foreground="#FFC107" Margin="0,0,0,10"/>
                            <TextBlock Text="â€¢ Projects help organize your translation work" 
                                      FontSize="12" Foreground="#CCCCCC" 
                                      TextWrapping="Wrap" Margin="0,0,0,5"/>
                            <TextBlock Text="â€¢ Add multiple .yml files to one project" 
                                      FontSize="12" Foreground="#CCCCCC" 
                                      TextWrapping="Wrap" Margin="0,0,0,5"/>
                            <TextBlock Text="â€¢ Your progress is auto-saved" 
                                      FontSize="12" Foreground="#CCCCCC" 
                                      TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Right: Recent Projects -->
            <Border Grid.Column="2" Background="#252526" CornerRadius="8" Padding="30">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top" 
                              Text="Recent Projects" 
                              FontSize="22" FontWeight="Bold" 
                              Foreground="White" Margin="0,0,0,20"/>
                    
                    <!-- Recent Projects List -->
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="RecentProjectsList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Click="OnOpenRecentProject" 
                                            Tag="{Binding Id}"
                                            Background="#2D2D30" 
                                            BorderThickness="0" 
                                            Padding="15" Margin="0,0,0,10" 
                                            HorizontalContentAlignment="Stretch"
                                            Cursor="Hand">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#3E3E42"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <TextBlock Grid.Column="0" Text="ðŸ“" 
                                                      FontSize="24" Margin="0,0,15,0"/>
                                            
                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="{Binding Name}" 
                                                          FontSize="14" FontWeight="SemiBold" 
                                                          Foreground="White"/>
                                                <TextBlock Text="{Binding Description}" 
                                                          FontSize="11" Foreground="#999999" 
                                                          Margin="0,4,0,0" TextTrimming="CharacterEllipsis"/>
                                                <TextBlock FontSize="11" Foreground="#666666" 
                                                          Margin="0,4,0,0">
                                                    <Run Text="Last opened: "/>
                                                    <Run Text="{Binding LastOpenedDate, StringFormat='{}{0:MMM d, yyyy}'}"/>
                                                </TextBlock>
                                            </StackPanel>
                                            
                                            <TextBlock Grid.Column="2" Text="â†’" 
                                                      FontSize="18" Foreground="#666666" 
                                                      VerticalAlignment="Center"/>
                                        </Grid>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Empty State -->
                    <StackPanel x:Name="EmptyState" 
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Center"
                               Visibility="Collapsed">
                        <TextBlock Text="ðŸ“­" FontSize="48" 
                                  HorizontalAlignment="Center" Margin="0,0,0,15"/>
                        <TextBlock Text="No recent projects" 
                                  FontSize="16" Foreground="#999999" 
                                  HorizontalAlignment="Center"/>
                        <TextBlock Text="Create your first project to get started" 
                                  FontSize="12" Foreground="#666666" 
                                  HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>
                </DockPanel>
            </Border>
        </Grid>
        </Grid>
    </Border>
</Window>
