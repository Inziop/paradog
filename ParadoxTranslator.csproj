<Project Sdk="Microsoft.NET.Sdk">
  <ItemGroup>
  <!-- Copy all non-source artifacts to output. We'll remove XAML and generated sources from the None set so the WPF build can handle them. -->
  <None Update="**\*.*">
    <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    <CopyToPublishDirectory>Always</CopyToPublishDirectory>
  </None>
  <!-- Ensure XAML and generated files are not treated as None (so they remain as Page/Compile for WPF) -->
  <None Remove="**\*.xaml;**\*.xaml.cs;**\*.g.cs;**\*.xaml.g.cs;**\*.xaml.baml" />
  </ItemGroup>
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <UseWPF>true</UseWPF>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <AssemblyTitle>Paradox Translator</AssemblyTitle>
    <AssemblyDescription>A tool for translating Paradox Interactive game localization files</AssemblyDescription>
    <AssemblyVersion>1.0.0.0</AssemblyVersion>
    <FileVersion>1.0.0.0</FileVersion>
    <ApplicationIcon>wmremove-transformed.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Http" Version="8.0.0" />
    <PackageReference Include="System.Text.Json" Version="8.0.0" />
    <PackageReference Include="WindowsAPICodePack-Shell" Version="1.1.1" />
  </ItemGroup>

</Project>
