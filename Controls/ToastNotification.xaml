<UserControl x:Class="ParadoxTranslator.Controls.ToastNotification"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="350" Height="80"
             Opacity="0">
    <UserControl.Resources>
        <Storyboard x:Key="ShowToast">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="0" To="1" Duration="0:0:0.3"/>
            <ThicknessAnimation Storyboard.TargetProperty="Margin"
                              From="0,-80,0,0" To="0,0,0,0" Duration="0:0:0.3">
                <ThicknessAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </ThicknessAnimation.EasingFunction>
            </ThicknessAnimation>
        </Storyboard>
        <Storyboard x:Key="HideToast">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="1" To="0" Duration="0:0:0.3"/>
        </Storyboard>
    </UserControl.Resources>
    
    <Border Background="#28A745" CornerRadius="8" Padding="15"
            BorderBrush="#1E7E34" BorderThickness="2">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="2" BlurRadius="10" Opacity="0.5"/>
        </Border.Effect>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock x:Name="IconText" Grid.Column="0" 
                       Text="✓" FontSize="24" Foreground="White"
                       VerticalAlignment="Center" Margin="0,0,10,0"/>
            
            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <TextBlock x:Name="TitleText" Text="Success" 
                           FontWeight="Bold" FontSize="14" Foreground="White"/>
                <TextBlock x:Name="MessageText" Text="Operation completed successfully"
                           FontSize="12" Foreground="#E8F5E9" TextWrapping="Wrap"
                           Margin="0,2,0,0"/>
            </StackPanel>
            
            <Button x:Name="CloseButton" Grid.Column="2"
                    Content="×" FontSize="20" FontWeight="Bold"
                    Foreground="White" Background="Transparent"
                    BorderThickness="0" Padding="5,0"
                    Cursor="Hand" VerticalAlignment="Top"
                    Click="OnCloseClick">
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.7"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Border>
</UserControl>
