<UserControl x:Class="ParadoxTranslator.Controls.ToastNotification"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="380" Height="90"
             Opacity="0">
    <UserControl.Resources>
        <Storyboard x:Key="ShowToast">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="0" To="1" Duration="0:0:0.25">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <ThicknessAnimation Storyboard.TargetProperty="Margin"
                              From="30,0,0,0" To="0,0,0,0" Duration="0:0:0.35">
                <ThicknessAnimation.EasingFunction>
                    <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                </ThicknessAnimation.EasingFunction>
            </ThicknessAnimation>
        </Storyboard>
        <Storyboard x:Key="HideToast">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="1" To="0" Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseIn"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <ThicknessAnimation Storyboard.TargetProperty="Margin"
                              From="0,0,0,0" To="30,0,0,0" Duration="0:0:0.2">
                <ThicknessAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseIn"/>
                </ThicknessAnimation.EasingFunction>
            </ThicknessAnimation>
        </Storyboard>
    </UserControl.Resources>
    
    <Grid>
        <Border x:Name="MainBorder" Background="#2D2D30" CornerRadius="10" Padding="16,12,16,8"
                BorderBrush="#3E3E42" BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="0" BlurRadius="20" Opacity="0.4" Color="Black"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="4"/>
                </Grid.RowDefinitions>
                
                <!-- Content Row -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Icon với gradient background -->
                    <Border Grid.Column="0" Width="40" Height="40" CornerRadius="20"
                            x:Name="IconBorder" Background="#28A745" Margin="0,0,12,0">
                        <TextBlock x:Name="IconText" Text="✓" FontSize="22" Foreground="White"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"
                                   FontWeight="Bold"/>
                    </Border>
                    
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock x:Name="TitleText" Text="Success" 
                                   FontWeight="SemiBold" FontSize="15" Foreground="White"
                                   Margin="0,0,0,3"/>
                        <TextBlock x:Name="MessageText" Text="Operation completed successfully"
                                   FontSize="13" Foreground="#B0B0B0" TextWrapping="Wrap"
                                   LineHeight="18"/>
                    </StackPanel>
                    
                    <Button x:Name="CloseButton" Grid.Column="2"
                            Content="✕" FontSize="16" FontWeight="Normal"
                            Foreground="#808080" Background="Transparent"
                            BorderThickness="0" Padding="8,4"
                            Cursor="Hand" VerticalAlignment="Top"
                            Margin="8,0,0,0"
                            Click="OnCloseClick">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#3E3E42"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
                
                <!-- Progress Bar Row -->
                <Grid Grid.Row="1" Margin="0,8,0,0">
                    <Border Background="#0E0E0E" CornerRadius="2" Height="4"/>
                    <Border x:Name="ProgressBarFill" Background="#28A745" 
                            CornerRadius="2" Height="4"
                            HorizontalAlignment="Left"
                            Width="380"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
